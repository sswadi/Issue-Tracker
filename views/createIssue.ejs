<html>
<head>
    <title> <%= title %> </title>
</head>
<body>
    
    <section id="filter">
        <form id="navbar" action="/issueTracker/filterProjectDetails/" method="post">
            <div class="form-check">
                <input class="form-check-input" type="radio" name="flexRadio" value="Project Title" id="flexRadio1"
                    required>
                <label class="form-check-label" for="flexRadio1">Project Title</label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="flexRadio" value="Project Description" id="flexRadio2"
                    required>
                <label class="form-check-label" for="flexRadio2">Project Description</label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="flexRadio" value="Project Author" id="flexRadio3"
                    required>
                <label class="form-check-label" for="flexRadio3">Project Author</label>
            </div>
            <button type="submit" class="btn btn-primary">Filter</button>
        </form>
    </section>

    <form action="/addIssue?id=<%= idd %>" method="post">
        <input type="text" name="title" placeholder="Type in the title.." required>
        <input type="text" name="description" placeholder="Add description.." required>
        
        <label for="issueType">Choose an issue type:</label>
        <select name="issueType" id="issueType">
            <option value="Bug">Bug</option>
            <option value="UI Improvement">UI Improvement</option>
            <option value="Documentation">Documentation</option>
            <option value="Enhancement">Enhancement</option>
        </select>

        <input type="text" name="author" placeholder="Add in your name.." required>
       
        <button>Add Issue</button>
    </form> 

</body>
</html>